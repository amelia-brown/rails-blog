<% provide(:title, "Home") %>

<% if logged_in? %>
  <i class="material-icons">add_circle_outline</i>
  <section class="modal">
    <%= render 'shared/post_form' %>
  </section>
<% end %>

<% if User.first.posts.any? %>
  <div class="feed">
    <ol>
      <%= render @posts %>
    </ol>
    <% will_paginate @posts %>
  </div>
<% end %>
