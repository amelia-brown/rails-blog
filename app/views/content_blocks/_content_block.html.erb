<div class="content-<%= content_block.page.title %>">
  <div class="modal__toggle-container">
    <div class="modal">
      <div class="modal__form-content">
        <i class="material-icons modal__toggle-button modal__toggle-button--close">close</i>
        <h3 class="modal__heading">Edit content</h3>
        <%= form_for(content_block, html: {multipart: true}) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <%= f.text_area :content,
            class: "modal__field modal__field--content",
            id: "wysihtml5-textarea",
            value: content_block.content.html_safe %>
          <div id="wysihtml5-toolbar" class="modal__toolbar">
            <a data-wysihtml5-command="bold"><strong>Bold</strong></a>
            <a data-wysihtml5-command="italic"><em>Italic</em></a>
            <a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h1">Heading</a>
            <a data-wysihtml5-command="createLink"><i class="material-icons link-button">link</i></a>
            <div data-wysihtml5-dialog="createLink" style="display: none;">
              <label>
                Link:
                <input data-wysihtml5-dialog-field="href" value="http://" class="text">
              </label>
              <a data-wysihtml5-action="save">ok</a> <a data-wysihtml5-dialog-action="cancel">Cancel</a>
            </div>
          </div>
          <%= f.submit "Update", class: "submit modal__submit", page: content_block.page.id, id: content_block.id %>
        <% end %>
      </div>
    </div>
  </div>


  <div class="content_block__content">
    <% if logged_in? %>
      <i class="material-icons modal__toggle-button modal__toggle-button--open">edit</i>
    <% end %>
    <%= content_block.content.html_safe %>
  </div>


</div>
